@page "/"
@page "/en"
@page "/index"
@page "/index/en"
@using Client.Components
@using Client.Shared
@using Client.Catalogs
@implements IDisposable
@layout MainLayout

@code
{
    [Inject]
    private IIndexModel? Model { get; set; }

    public void Dispose()
    {
        Model!.Dispose();
    }
}

<div class="container-fluid">
    <main>
        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Live forever in Heaven</h1>
                    <p class="lead text-muted">&#8220;Today, if you hear His voice, do not harden your hearts as you did in the rebellion.&#8221;</p>
                    <a href="https://www.bible.com/bible/111/HEB.3.15.NIV" class="anchor-plain" target="_blank">
                        <footer class="blockquote-footer text-end">Hebrews 3:15 <cite title="Source Title">NIV</cite></footer>
                    </a>
                </div>
            </div>
            <blockquote class="blockquote text-justify">
                <p class="mb-3">
                    This is a free guide that in just five minutes explains <b>how you can live forever in Heaven after you die</b>. 
                    No matter who you are today or what you have done with your life, how bad you have been, even if you are the worst 
                    of the worst of human kind, you <b>can</b> have this gift today, right now, if you want it and will cost you nothing 
                    at all, but five minutes.
                </p>
                <p>
                    I know that you are busy and you'd rather do something else today, therefore you can find here below the short answer to the question 
                    <b><i>"what do I have to do to get this free gift?"</i></b>. You can, of course, come back to this site later when you wish to find out 
                    more and to try to understand why it is so.
                </p>
            </blockquote>
        </section>
        <section>
            <div class="accordion accordion-flush" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed d-block text-center"
                                id="btn-quick-list"
                                type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseOne"
                                aria-expanded="false"
                                aria-controls="flush-collapseOne" 
                                style="font-size : 20px; width: 100%; height: 50px; background-color: #EDE275">
                            The Quick Steps to Heaven
                        </button>
                    </h2>
                    <div id="flush-collapseOne" 
                         class="accordion-collapse collapse" 
                         data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <p>
                                <div>
                                    <GradientList></GradientList>
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <div class="col">
                        <Card Model="@Model!.GetCard(CardCatalog.Death001)"></Card>
                    </div>
                    <div class="col">
                        <Card Model="@Model!.GetCard(CardCatalog.TheLaw001)"></Card>
                    </div>
                    <div class="col">
                        <Card Model="@Model!.GetCard(CardCatalog.Hell001)"></Card>
                    </div>
                    <div class="col">
                        <Card Model="@Model!.GetCard(CardCatalog.TheCross001)"></Card>
                    </div>
                    <div class="col">
                        <Card Model="@Model!.GetCard(CardCatalog.TheBible001)"></Card>
                    </div>
                    <div class="col">
                        <Card Model="@Model!.GetCard(CardCatalog.TheBible001)"></Card>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<style>
    #btn-quick-list::after {
        position: absolute;
        z-index: 100;
        right: 16px;
    }
</style>
