@page "/about"
@page "/about/en"
@page "/about/de"
@page "/about/it"
@using BlazorApp.Client.Pages.Models
@layout MainLayout
@implements IDisposable

@code {    
    
    [Inject]
    public IAboutModel Model { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Model.OnLanguageSelection += StateHasChanged;
    }

    public void Dispose()
    {
        Model.OnLanguageSelection -= StateHasChanged;
    }
}

