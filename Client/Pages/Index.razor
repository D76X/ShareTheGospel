@page "/" 
@page "/index"
@layout MainLayout

@*the \@page "/" tells Blazor that this page is the entry page of the application*@

@*<PageTitle>Index</PageTitle>*@

<div class="container-fluid">
	<main >
		<div class="row golden-border pt-3">
			<blockquote class="blockquote text-center">
				<p class="mb-3">&#8220;Ho! Everyone who thirsts, Come to the waters; And you who have no money, Come, buy and eat. Yes, come, buy wine and milk without money and without price.&#8221;</p>
				<a href="https://my.bible.com/bible/114/ISA.55.1" class="anchor-plain" target="_blank">
					<footer class="blockquote-footer text-end">Isaiah 55:1 <cite title="Source Title">NKJV</cite></footer>
				</a>
			</blockquote>
		</div>
		<div class="row golden-border">
			<article>
				<header>
					<h1 class="text-center">The Gospel!</h1>
					<p class="text-end">By Davide Spano</p>
				</header>
				<p>
					Here your article content..
				</p>
			</article>
		</div>
	</main>
	@*<h1>You can have Eternal Life</h1>*@
	<button class="btn btn-success" onclick="@OnSuccess">Success @Count</button>
</div>

@code { 
	
	public int Count { get; set; } = 0;

	private void OnSuccess(MouseEventArgs e)
	{
		Count++;
	}
}